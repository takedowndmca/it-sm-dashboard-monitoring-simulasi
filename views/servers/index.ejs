<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Server List</title>

  <!-- Link Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  
  <!-- Custom Styles -->
  <style>
    body {
      padding-top: 20px;
    }
    .table-container {
      overflow-x: auto;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1 class="mb-4">Daftar Server</h1>

    <!-- Button to Dashboard -->
    <div class="d-flex justify-content-between mb-4">
      <a href="/servers/create" class="btn btn-primary">+ Tambah Server</a>

      <!-- Button to Dashboard -->
      <a href="/servers/dashboard" class="btn btn-info">Go to Dashboard</a>
    </div>

    <!-- Generate Sample Logs Button -->
    <form action="/servers/generate-sample-logs" method="POST" class="mb-4">
      <button type="submit" class="btn btn-success w-100">ðŸš€ Generate Sample Logs</button>
    </form>

    <!-- Servers Table -->
    <div class="table-container">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Nama</th>
            <th>IP</th>
            <th>Lokasi</th>
            <th>Layanan</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% servers.forEach(s => { %>
            <tr>
              <td><%= s.name %></td>
              <td><%= s.ip %></td>
              <td><%= s.location %></td>
              <td><%= s.service_type %></td>
              <td><%= s.status %></td>
              <td>
                <a href="/servers/edit/<%= s.id %>" class="btn btn-warning btn-sm">Edit</a>

                <form action="/servers/toggle-status/<%= s.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-secondary btn-sm">Toggle</button>
                </form>

                <form action="/servers/delete/<%= s.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

</body>
</html>
